<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlDoingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDoingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        >

    </android.support.v7.widget.RecyclerView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabDoingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/md_activity_right_margin"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginBottom="@dimen/md_fab_margin_bottom"
        fab:fab_colorNormal="@color/accentColor"
        fab:fab_colorPressed="@color/accentColorDark"
        />
    


</RelativeLayout>