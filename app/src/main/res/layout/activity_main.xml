<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        >


    </FrameLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/main_container"
        android:layout_marginRight="@dimen/md_activity_right_margin"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_marginBottom="@dimen/md_fab_margin_bottom"
        fab:fab_colorNormal="@color/accentColor"
        fab:fab_colorPressed="@color/accentColorDark"
        />

</RelativeLayout>